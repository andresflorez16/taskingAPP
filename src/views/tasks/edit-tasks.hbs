<div class="col-md-4 mx-auto">
    <div class="card">
        <div class="card-header">
            <h3>Edit task</h3>
        </div>
        <div class="card-body">
            <form action="/tasks/edit-task/{{task.id}}?_method=PUT" enctype="application/x-www-form-urlencoded" method="post">
                <input type="hidden" name="_method" value="PUT">
                <div class="form-group mb-4">
                    <input type="text" class="form-control" name="title" placeholder="Title" value={{task.title}}>
                </div>
                <div class="form-group mb-4">
                    <input type="date" class="form-control" name="date" value={{task.date}}>
                </div>
                <div class="form-group mb-4">
                    <textarea name="description" class="form-control">{{task.description}}</textarea>
                </div>
                <div class="form-group d-grid gap-2">
                    <button class="btn btn-primary" type="submit" >Save</button>
                </div>
            </form>
        </div>
    </div>
</div>