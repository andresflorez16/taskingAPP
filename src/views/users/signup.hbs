<div class="row">
    <div class="col-md-5 mx-auto">
        <div class="card">
            <div class="card-header">
                <h3>Account register</h3>
            </div>
            <div class="card-body">
                <form action="/users/signup" method="post">
                    <div class="form-group mb-4">
                        <input type="text" class="form-control" name="name" placeholder="Name" value={{name}}>
                    </div>
                    <div class="form-group mb-4">
                        <input type="email" class="form-control" name="email" placeholder="Email" value={{email}}>
                    </div>
                    <div class="form-group mb-4">
                        <input type="password" class="form-control" name="password" placeholder="Password" value={{password}}>
                    </div>
                    <div class="form-group mb-4">
                        <input type="password" class="form-control" name="confirmPassword" placeholder="Confirm password" value={{confirmPassword}}>
                    </div>
                    <div class="form-group d-grid gap-2">
                        <button type="submit" class="btn btn-primary" >SignUp</button>
                    </div>
                    <span><a href="/users/signin">Do you have an account?</a></span>
                </form>
            </div>

        </div>
    </div>
</div>